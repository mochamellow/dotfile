# Homebrew paths
# set -gx PATH /opt/homebrew/bin /opt/homebrew/sbin $PATH
set -gx PATH /opt/homebrew/opt/ruby/bin /opt/homebrew/bin /opt/homebrew/sbin $PATH

# Standard paths
set -gx PATH /usr/local/bin /usr/bin /bin /usr/sbin /sbin $PATH

# Starship prompt
starship init fish | source

# zoxide
zoxide init fish | source

# Set a custom data file for z
set -gx _Z_DATA ~/.z_single_dir

# Optional: Set maximum entries to keep it focused
set -gx _Z_MAX_SCORE 9000

set -U fish_greeting ""

# Bind fuzzy search to ctrl + f
bind \cf _fzf_search_directory
bind -M insert \cf _fzf_search_directory

# Bind shell history to ctrl + h
bind \ch _fzf_search_history
bind -M insert \ch _fzf_search_history

# fnm setup for fish
eval (fnm env)

